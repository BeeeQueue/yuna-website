mixin lazyImg(file)
  img.image.lazy(
    src="img/flow-placeholder/" + file + ".jpg"
    data-src="img/flow/" + file + ".jpg"
  )

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="theme-color" content="#212d47")
    link(rel="icon" href="icon.ico?v=1")

    style.
      body {
        background: #111;
        color: #eee;
        font-family: 'Lato', sans-serif;
        transition: background 1s;
      }

    link(link href="https://fonts.googleapis.com/css?family=Lato:400|Raleway:700" rel="stylesheet")
    link(rel="stylesheet" href="css/index.css")

    title Yuna - Anime Player and List Manger

  body
    header
      .item item
      img.logo(src="img/logo.png")
      .item Download

    .section
      .content-container
        .content
          h3 Watch anime and update your List from the same place!
          p With Crunchyroll integration you can watch any show available, with automatic list updating when you finish an episode!
      .image-container
        +lazyImg("anime")

    .section
      .content-container
        .content
          h3 Easily keep track of what to watch next!
          p Add shows to your Queue to quickly resume from where you left off!<br/>
          p Easily know what to watch next with easy importing from your List!
      .image-container
        +lazyImg("queue")

    .section
      .content-container
        .content
          h3 Configurable spoiler hiding!
          p.
            Do you obsess over spoilers like a certain friend of mine?<br/>
            Hide info until you've already seen it in the show!
          p.hint Click the image to toggle the spoiler hiding!
      .image-container
        +lazyImg("anime-spoiler")

    .section
      .content-container
        .content
          h3 Quickly edit your List without opening AniList!
          p insert text here
      .image-container
        +lazyImg("list")

    script(src="js/index.js")
